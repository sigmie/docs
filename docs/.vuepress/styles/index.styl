body
  font-family: Roboto,-apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  font-weight: 400;
  font-style: normal;

#search
  background-color: #282a2d

#search:focus
  background-color: #313131

.sidebar-group
 > a
  line-height: 1.7;
  font-weight: bold;
  font-size: 14px !important;
  text-transform: uppercase;
  text-align: start;
  letter-spacing: 0.08em;
  color: #718096 !important;
  padding: 0.35rem 1rem 0.35rem 1.25rem
 a.sidebar-link
  font-weight: 500 !important
  color: #a0aec0 !important

 a.sidebar-link.active
   font-weight: 600 !important

 > ul.sidebar-links
   padding-left: 0.5rem !important

.site-name
  display: none !important

.sidebar
    border-right: 0;
    background-color: #f9fafb
    width: 16rem !important;

.navbar
    border-bottom: 2px #FF6347 solid;
    background-color: #202327

.navbar .links
      background-color: #202327 !important
      color: #A3A3A3

.navbar .links:hover
      background-color: #202327 !important
      color: #e2e8f0

.nav-link
   color: #cbd5e0 !important
  .icon.outbound
    color: #cbd5e0 !important

.nav-link:hover
  color: #a0aec0 !important
  .icon
   color: #a0aec0 !important

.custom-block
    border-radius: 5px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 0px solid !important;

  &.tip
     border-color: #48bb78!important
     background-color: #f0fff4!important

  &.danger
     border-color: #f56565!important
     .custom-block-title
         color: red

  &.warning
     border-color: #ecc94b!important

  &.details
      background-color: #f7fafc!important

.header-anchor
    color: #a0aec0

.sidebar-button
  background-color: #202327 !important
  color: #A3A3A3

ul.sidebar-links
  padding-left: 1rem !important

.sidebar > .sidebar-links > li > a.sidebar-link
    font-size: 14px !important;
    text-transform: uppercase;
    text-align: start;
    letter-spacing: 0.08em;
    color: #718096 !important

a.sidebar-link.active
    border-color:#FF6347!important

ul
 list-style: none

a
 color: #2d3748

a:hover
 color: #4a5568
 text-decoration: none !important

.table-of-contents a:before
    content: "# ";
    color: #a0aec0;
    margin-left: -15px;
    margin-right: 3px;


div[class*="language-"]
  background-color: #f7fafc
  -webkit-font-smoothing subpixel-antialiased
  -moz-osx-font-smoothing subpixel-antialiased
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, .05)

.theme-default-content pre, .theme-default-content pre[class*="language-"]
  line-height 1.7

.theme-default-content pre code, .theme-default-content pre[class*="language-"] code
  color #666 !important

div[class~="language-php"]:before
  content "php"

div[class*="language-"]:before
  color: rgba(0, 0, 0, 0.3)

.token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin
  color #ff5d38

.token.class-name
 color #2f8bc7

.token.property, .token.constant, .token.symbol, .token.variable, .token.operator
  color #6b7190

.token.function
  color: #5577b3

.token.boolean, .token.number
  color #4a5568

.token.string, .token.char, .token.attr-value, .token.regex
  color #48bb78

.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata
  color #a0aec0
